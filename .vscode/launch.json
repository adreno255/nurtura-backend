    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${file}",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach Nest.js Debugger",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--runInBand", "--config", "package.json"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Unit Test File",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "${file}",
                "--config",
                "package.json",
                "--runInBand",
                "--no-cache",
                "--testPathIgnorePatterns='(\\.integration\\.spec\\.ts$|\\.e2e-spec\\.ts$)'"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Integration Test File",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "${file}",
                "--config",
                "test/jest-integration.json",
                "--runInBand",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current E2E Test File",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["${file}", "--config", "test/jest-e2e.json", "--runInBand", "--no-cache"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
