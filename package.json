{
    "name": "nurtura-api-server",
    "version": "0.0.0-development",
    "description": "The API server for the Nurtura Android application.",
    "author": "https://github.com/adreno255",
    "private": true,
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/adreno255/nurtura-backend.git"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "cross-env NODE_ENV=development nest start",
        "start:dev": "cross-env NODE_ENV=development nest start --watch",
        "start:staging": "cross-env NODE_ENV=staging nest start --watch",
        "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
        "start:prod": "cross-env NODE_ENV=production node dist/src/main",
        "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "cross-env NODE_ENV=test jest",
        "test:watch": "cross-env NODE_ENV=test jest --watch",
        "test:cov": "cross-env NODE_ENV=test jest --coverage",
        "test:integration": "cross-env NODE_ENV=test jest --config ./test/jest-integration.json --runInBand",
        "test:integration:watch": "cross-env NODE_ENV=test jest --config ./test/jest-integration.json --watch --runInBand",
        "test:integration:cov": "cross-env NODE_ENV=test jest --config ./test/jest-integration.json --coverage --runInBand",
        "test:e2e": "cross-env NODE_ENV=development jest --config ./test/jest-e2e.json --runInBand",
        "test:e2e:watch": "cross-env NODE_ENV=development jest --config ./test/jest-e2e.json --watch --runInBand",
        "test:e2e:cov": "cross-env NODE_ENV=development jest --config ./test/jest-e2e.json --coverage --runInBand",
        "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:all": "npm run test && npm run test:integration && npm run test:e2e",
        "test:all:cov": "npm run test:cov && npm run test:integration:cov && npm run test:e2e:cov",
        "prepare": "husky",
        "init:dev": "npm install && node scripts/init-env.js && prisma generate",
        "docker:mqtt:up": "docker-compose up -d mqtt",
        "docker:mqtt:password": "docker exec -it nurtura-mqtt mosquitto_passwd -b -c //mosquitto/config/password.txt my_user my_pass",
        "docker:mqtt:setup": "docker exec -it nurtura-mqtt chmod 644 //mosquitto/config/password.txt",
        "docker:mqtt:down": "docker-compose down mqtt",
        "docker:db:up": "docker-compose up -d postgres && dotenv -e .env.test -- npx prisma db push",
        "docker:db:down": "docker-compose down postgres",
        "docker:pgadmin:up": "docker-compose up -d pgadmin",
        "docker:pgadmin:down": "docker-compose stop pgadmin",
        "docker:down": "docker-compose down",
        "semantic-release": "semantic-release"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/event-emitter": "^3.0.1",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/platform-socket.io": "^11.1.12",
        "@nestjs/swagger": "^11.2.3",
        "@nestjs/throttler": "^6.5.0",
        "@nestjs/websockets": "^11.1.12",
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.4.0",
        "@sendgrid/mail": "^8.1.6",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "firebase-admin": "^13.6.0",
        "joi": "^18.0.2",
        "mqtt": "^5.14.1",
        "passport": "^0.7.0",
        "passport-firebase-jwt": "^1.2.1",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "socket.io": "^4.8.3",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.16",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^13.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.2",
        "@semantic-release/npm": "^13.1.2",
        "@semantic-release/release-notes-generator": "^14.1.0",
        "@types/express": "^5.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.10.7",
        "@types/passport-jwt": "^4.0.1",
        "@types/pg": "^8.16.0",
        "@types/supertest": "^6.0.2",
        "conventional-changelog-conventionalcommits": "^9.1.0",
        "cross-env": "^10.1.0",
        "dotenv-cli": "^11.0.0",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jest": "^30.0.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.4.2",
        "prisma": "^7.4.0",
        "semantic-release": "^25.0.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "overrides": {
        "hono": "^4.11.7",
        "lodash": "^4.17.23",
        "fast-xml-parser": "^5.3.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": [
                "ts-jest",
                {
                    "useESM": false
                }
            ]
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^(\\.*/.*)\\.(j|t)s$": "$1"
        },
        "extensionsToTreatAsEsm": [
            ".ts"
        ]
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    }
}
