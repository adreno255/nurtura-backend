generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
    moduleFormat = "cjs"
}

datasource db {
    provider = "postgresql"
}

enum PlantType {
    ASTERACEAE
    BASELLACEAE
    LAMIACEAE
    APIACEAE
}

enum SoilType {
    LOAMY
    SANDY
    PEATY
    SILTY
    CHALKY
    CLAY
}

enum ActivityEventType {
    LIGHT_ON
    LIGHT_OFF
    WATERING_ON
    WATERING_OFF
    SENSORS_ON
    SENSORS_OFF
}

enum NotificationType {
    SYSTEM
    ALERT
    INFO
}

model User {
  id         String   @id @default(cuid())
  firebaseUid String  @unique @map("firebase_uid")
  email      String   @unique
  firstName  String   @map("first_name")
  middleName String?  @map("middle_name")
  lastName   String   @map("last_name")
  suffix     String?
  address    String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("users")
  notifications Notification[]
  racks Rack[]
}

model Rack {
    id         Int      @id @default(autoincrement())
    userId     String
    rackName   String
    macAddress String
    user        User     @relation(fields: [userId], references: [id])
    plants      Plant[]
    activities  Activity[]
    notifications Notification[]

    @@map("racks")
}

model Plant {
    id              Int       @id @default(autoincrement())
    rackId          Int
    plantName       String
    plantType       PlantType?
    plantAmount     Int?
    recommendedSoil SoilType?
    datePlanted     DateTime? @default(now())
    lastWateredAt   DateTime?
    lastLightOn     DateTime?

    rack Rack @relation(fields: [rackId], references: [id])

    @@map("plants")
}

model Activity {
    id           Int               @id @default(autoincrement())
    rackId       Int
    timestamp    DateTime          @default(now())
    eventType    ActivityEventType
    eventDetails String?

    rack Rack @relation(fields: [rackId], references: [id])

    @@map("activities")
}

model Notification {
    id               Int               @id @default(autoincrement())
    userId           String
    rackId           Int?
    message          String
    notificationType NotificationType?

    user User @relation(fields: [userId], references: [id])
    rack Rack? @relation(fields: [rackId], references: [id])

    @@map("notifications")
}


