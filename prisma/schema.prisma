// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
    moduleFormat = "cjs"
}

datasource db {
    provider = "postgresql"
}

// ============================================
// ENUMS
// ============================================

enum PlantType {
  ASTERACEAE  // Lettuce, Sunflower
  BASELLACEAE // Alugbati, Malabar spinach
  LAMIACEAE   // Basil, Mint
  APIACEAE    // Parsley, Celery
  
  @@map("plant_type")
}

enum SoilType {
  LOAMY
  SANDY
  PEATY
  SILTY
  CHALKY
  CLAY
  
  @@map("soil_type")
}

enum ActivityEventType {
  LIGHT_ON
  LIGHT_OFF
  WATERING_ON
  WATERING_OFF
  SENSORS_ON
  SENSORS_OFF
  SYSTEM_START
  SYSTEM_STOP
  SENSOR_READING  // For logging sensor readings
  AUTOMATION_TRIGGERED  // For automation events
  DEVICE_ONLINE
  DEVICE_OFFLINE
  
  @@map("activity_event_type")
}

enum NotificationType {
  SYSTEM
  ALERT
  WARNING
  INFO
  SUCCESS
  
  @@map("notification_type")
}

enum NotificationStatus {
  UNREAD
  READ
  ARCHIVED
  
  @@map("notification_status")
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  ERROR
  MAINTENANCE
  
  @@map("device_status")
}

// ============================================
// MODELS
// ============================================

model User {
  id          String   @id @default(cuid())
  firebaseUid String   @unique @map("firebase_uid")
  email       String   @unique
  firstName   String   @map("first_name")
  middleName  String?  @map("middle_name")
  lastName    String   @map("last_name")
  suffix      String?
  address     String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  racks         Rack[]
  notifications Notification[]

  @@map("users")
}

model Rack {
  id             String       @id @default(cuid())
  userId         String       @map("user_id")
  name           String
  macAddress     String       @unique @map("mac_address") // ESP32 MAC address
  mqttTopic      String?      @map("mqtt_topic") // Custom MQTT topic for this rack
  description    String?
  isActive       Boolean      @default(true) @map("is_active")
  status         DeviceStatus @default(OFFLINE)
  lastActivityAt DateTime?    @map("last_activity_at")
  lastSeenAt     DateTime?    @map("last_seen_at") // Last MQTT message received
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  // Relations
  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  plants            Plant[]
  activities        Activity[]
  notifications     Notification[]
  sensorReadings    SensorReading[]
  automationRules   AutomationRule[]
  aggregatedReadings AggregatedSensorReading[]

  @@index([userId])
  @@index([macAddress])
  @@index([status])
  @@index([lastSeenAt])
  @@map("racks")
}

model Plant {
  id              String     @id @default(cuid())
  rackId          String     @map("rack_id")
  name            String
  type            PlantType?
  quantity        Int        @default(1)
  recommendedSoil SoilType?  @map("recommended_soil")
  plantedAt       DateTime   @default(now()) @map("planted_at")
  harvestAt       DateTime?  @map("harvest_at")
  lastWateredAt   DateTime?  @map("last_watered_at")
  lastLightOnAt   DateTime?  @map("last_light_on_at")
  notes           String?
  isActive        Boolean    @default(true) @map("is_active")
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")

  // Relations
  rack Rack @relation(fields: [rackId], references: [id], onDelete: Cascade)

  @@index([rackId])
  @@index([plantedAt])
  @@map("plants")
}

model SensorReading {
  id          String   @id @default(cuid())
  rackId      String   @map("rack_id")
  temperature Float    // Celsius
  humidity    Float    // Percentage (0-100)
  moisture    Float    // Percentage (0-100)
  lightLevel  Float    @map("light_level") // Lux or raw LDR value
  timestamp   DateTime @default(now())
  
  // Optional: Store raw sensor values for debugging
  rawData     Json?    @map("raw_data")

  // Relations
  rack Rack @relation(fields: [rackId], references: [id], onDelete: Cascade)

  @@index([rackId, timestamp])
  @@index([timestamp])
  @@index([rackId])
  @@map("sensor_readings")
}

// Aggregated data for analytics (hourly averages)
model AggregatedSensorReading {
  id             String   @id @default(cuid())
  rackId         String   @map("rack_id")
  hour           DateTime // Start of the hour
  avgTemperature Float    @map("avg_temperature")
  avgHumidity    Float    @map("avg_humidity")
  avgMoisture    Float    @map("avg_moisture")
  avgLightLevel  Float    @map("avg_light_level")
  minTemperature Float    @map("min_temperature")
  maxTemperature Float    @map("max_temperature")
  minMoisture    Float    @map("min_moisture")
  maxMoisture    Float    @map("max_moisture")
  readingCount   Int      @map("reading_count") // Number of readings aggregated
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  rack Rack @relation(fields: [rackId], references: [id], onDelete: Cascade)

  @@unique([rackId, hour])
  @@index([rackId, hour])
  @@index([hour])
  @@map("aggregated_sensor_readings")
}

// Automation rules for watering and lighting
model AutomationRule {
  id          String   @id @default(cuid())
  rackId      String   @map("rack_id")
  name        String
  description String?
  isEnabled   Boolean  @default(true) @map("is_enabled")
  
  // Trigger conditions (JSON for flexibility)
  // Example: { "moisture": { "lessThan": 30 }, "lightLevel": { "lessThan": 500 } }
  conditions  Json
  
  // Actions to perform (JSON for flexibility)
  // Example: { "watering": { "duration": 5000 }, "growLight": { "action": "on" } }
  actions     Json
  
  // Execution settings
  cooldownMinutes Int?     @map("cooldown_minutes") // Prevent rapid re-triggering
  lastTriggeredAt DateTime? @map("last_triggered_at")
  triggerCount    Int      @default(0) @map("trigger_count")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  rack Rack @relation(fields: [rackId], references: [id], onDelete: Cascade)

  @@index([rackId])
  @@index([isEnabled])
  @@map("automation_rules")
}

model Activity {
  id        String            @id @default(cuid())
  rackId    String            @map("rack_id")
  eventType ActivityEventType @map("event_type")
  details   String?
  metadata  Json?             // Store additional data as JSON
  timestamp DateTime          @default(now())

  // Relations
  rack Rack @relation(fields: [rackId], references: [id], onDelete: Cascade)

  @@index([rackId])
  @@index([timestamp])
  @@index([eventType])
  @@index([rackId, timestamp])
  @@map("activities")
}

model Notification {
  id        String              @id @default(cuid())
  userId    String              @map("user_id")
  rackId    String?             @map("rack_id")
  type      NotificationType    @default(INFO)
  status    NotificationStatus  @default(UNREAD)
  title     String
  message   String
  metadata  Json?               // Store additional context as JSON
  readAt    DateTime?           @map("read_at")
  createdAt DateTime            @default(now()) @map("created_at")
  updatedAt DateTime            @updatedAt @map("updated_at")

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  rack Rack? @relation(fields: [rackId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
  @@map("notifications")
}